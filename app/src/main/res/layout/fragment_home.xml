<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Categorias.Home">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="381dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde_redondog"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:ems="10"
                android:hint=" Libro o Autor"
                android:inputType="textPersonName"
                android:paddingLeft="25dp" />

            <TextView
                android:id="@+id/lbl_Bienvenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Bienvenido"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="469dp"
                android:layout_height="189dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/banner" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Recomendaciones"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/colorIndigo"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/LayoutSugerencias"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgCategory1"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_alma" />

                    <ImageView
                        android:id="@+id/imgCategory2"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_fantasma"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/imgCategory3"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_lider" />

                    <ImageView
                        android:id="@+id/imgCategory4"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_silencio" />

                    <ImageView
                        android:id="@+id/imgCategory5"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_soledad" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Categorias"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="50dp"
                android:background="#80BEEF"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/LayoutCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_cienciaficcion"
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImagenHomFragment1"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/categoria_cf" />

                        <TextView
                            android:id="@+id/TextViewFragmentHome1"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#009688"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="FICCIÓN"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_clasico"
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImagenHomFragment2"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/categoria_clasic" />

                        <TextView
                            android:id="@+id/TextViewFragmentHome2"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#9C27B0"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="CLÁSICOS"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_historia"
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImagenHomFragment3"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/categoria_historia" />

                        <TextView
                            android:id="@+id/TextViewFragmentHome3"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#E91E63"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="HISTORIA"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_juvenil"
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImagenHomFragment4"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/categoria_juvenil" />

                        <TextView
                            android:id="@+id/TextViewFragmentHome4"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#673AB7"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="JUVENIL"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_romance"
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImagenHomFragment5"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/categoria_romance" />

                        <TextView
                            android:id="@+id/TextViewFragmentHome5"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#3F51B5"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="ROMANCE"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_terror"
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ImagenHomFragment6"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/categoria_terror" />

                        <TextView
                            android:id="@+id/TextViewFragmentHome6"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#2196F3"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="TERROR"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>